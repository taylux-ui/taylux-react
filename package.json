{
    "name": "@taylux-ui/react",
    "private": false,
    "version": "0.0.4",
    "type": "module",
    "main": "./dist/taylux.umd.js",
    "module": "./dist/taylux.es.js",
    "types": "./dist/types/ui/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/taylux.es.js",
            "require": "./dist/taylux.umd.js",
            "types": "./dist/types/ui/index.d.ts"
        },
        "./style.css": {
            "import": "./dist/assets/style.css",
            "require": "./dist/assets/style.css"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "clean": "rm -rf dist",
        "lint": "eslint . --fix",
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "validate": "npm run lint && npm run format && npm run typecheck",
        "prepare": "husky"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.13.0",
        "@types/node": "^22.9.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@typescript-eslint/parser": "^8.15.0",
        "@vitejs/plugin-react": "^4.3.3",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "husky": "^9.1.7",
        "terser": "^5.36.0",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10",
        "vite-plugin-dts": "^4.3.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
